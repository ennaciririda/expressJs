// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  cin       String   @id @unique
  name      String
  email     String
  password  String
  role      Role
  isActive  Boolean
  joinedDate DateTime
  leftDate   DateTime?
  committee Committee @relation(fields: [committeeId], references: [id])
  committeeId Int
}

model Committee {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  members     Member[]
}

enum Role {
  PRESIDENT
  COMMITTEE_HEAD
  MEMBER
}